

<!-- Content -->
<main id="content">

  <!-- Hero block -->
  <section class="pageblock js-pageblock pageblock--hero pageblock--blog-hero">
    <div class="pageblock__inner">
      <div class="container-fluid">
        <div class="l-hero__row row align-items-center justify-content-center">
          <div class="l-hero__col--left col-12">
            <div class="hero__content">
              <div class="breadcrumbs">
                <span><a href="/blog">Blog</a> <span class="breadcrumbs__separator">/</span></span>
              </div>
              <h1><%= @post.title %></h1>
            </div>
            <div class="hero__meta-row">
              <div class="hero__meta-row-author-img"><img src="<%= @post.author.image_path %>"></div>
              <div class="hero__meta-row-text"><%= @post.author.name %></div>
              <div class="hero__meta-row-separator">•</div>
              <div class="hero__meta-row-text"><%= @post.date %></div>
            </div>
            <%# <div class="hero__meta-row">
              <div class="hero__meta-row-categories"><span>Codebase</span><span>Dependencies</span><span>Disposability</span></div>
            </div> %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Blog Post Content -->
  <div class="main-content-wrapper">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12 col-lg-8 offset-lg-2">
          <section class="main-content">
            <%= @post.render %>
          </section>
          <aside class="blog-detail-footer">
            <div class="blog-detail-footer__top">
              <% if @post.categories? %>
                <div class="blog-detail-footer__categories">
                  <strong>Tags:</strong>
                  <% @post.categories.each do |category| %>
                    <span><%= category %></span>
                  <% end %>
                </div>
              <% end %>
              <div class="blog-detail-footer__share"><strong>Share</strong>&nbsp;<i class="fa-brands fa-linkedin"></i> <i class="fa-brands fa-square-x-twitter"></i> <i class="fa-brands fa-facebook"></i></div>
            </div>
            <div class="blog-detail-footer__bottom">
              <div class="blog-detail-footer__author-img-col">
                <img src="<%= @post.author.image_path %>" alt="Headshot of <%= @post.author.name %>">
              </div>
              <div class="blog-detail-footer__author-text-col">
                <div class="blog-detail-footer__author-name"><%= @post.author.name %></div>
                <%= @post.author.description %>
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </div>

  <!-- Featured Blog Posts Block (Post feed) -->
  <section class="pageblock pageblock--post-feed bg-color-gray">
    <div class="pageblock__inner">
      <div class="container-fluid">
        <div class="row align-items-start justify-content-center">
          <div class="l-posts__column col--full-width featured-posts col-12">
            <div class="featured-posts__row row">
              <div class="featured-posts__inner col-12">
                <h2 class="featured-posts__block-title text-center"><span>Featured Blog Posts</span></h2>
                <div class="l-posts__row row">
                  <% TwelveFactor::BLOG.featured.each do |post| %>
                  <a href="<%= post.url %>" class="post-teaser post type-post post-blog featured-post col-12 col-xl-4">
                    <div class="post-teaser__inner">
                      <% if post.image_path %>
                        <div class="post-teaser__image">
                          <img width="600" height="400" src="<%= post.image_path %>" />
                        </div>
                      <% end %>
                      <div class="post-teaser__content">
                        <div class="post-teaser__meta">
                          <div class="post-meta__item post-meta__item--author-img"><img src="<%= @post.author.image_path %>"></div>
                          <div class="post-meta__item post-meta__item--author-name"><%= @post.author.name %></div>
                          <div class="post-meta__item post-meta__item--separator">•</div>
                          <div class="post-meta__item post-meta__item--date"><%= @post.date %></div>
                        </div>
                        <h3 class="post-teaser__title"><%= @post.title %></h3>
                        <% if @post.categories? %>
                          <div class="post-teaser__categories"><% @post.categories.each do |category| %><span><%= category %></span><% end %></div>
                        <% end %>
                      </div>
                    </div>
                  </a>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
